<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="forecastList.TextView" parent="@android:style/TextAppearance.Small">
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">3dip</item>
		<item name="android:paddingRight">3dip</item>
	</style>
	<style name="forecastList.ImageView" parent="@android:style/TextAppearance.Small">
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">3dip</item>
		<item name="android:paddingRight">3dip</item>
		<item name="android:scaleType">center</item>
	</style>
	<style name="forecastList.date" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:padding">3dip</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

</resources> 
