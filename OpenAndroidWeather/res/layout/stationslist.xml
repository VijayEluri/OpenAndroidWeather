<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="fill_parent">
	<include layout="@layout/header" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="8dip"
		android:paddingRight="8dip" android:paddingTop="6dip"
		android:paddingBottom="4dip" android:baselineAligned="false"
		android:orientation="vertical">
		<EditText android:hint="@string/type_to_filter"
			android:paddingLeft="8dip" android:layout_height="wrap_content"
			android:id="@+id/search_box" android:maxLines="1"
			android:layout_width="fill_parent" android:paddingRight="6dip"
			android:layout_weight="1.0"></EditText>

	</LinearLayout>
	<!-- <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" -->
	<!-- android:hint="@string/type_to_filter" android:inputType="text" -->
	<!-- android:maxLines="1" android:id="@+id/search_box"/> -->
	<ImageView   
		android:layout_width="fill_parent"
		android:layout_height="2px"
		android:background="#40000000" android:layout_marginBottom="0dip" android:layout_marginTop="0dip">
	</ImageView>
	<ListView android:layout_width="fill_parent" android:id="@+id/android:list"
		android:layout_height="fill_parent">
		<!-- Preview: listitem=@layout/stationslist_row -->
	</ListView>
</LinearLayout>
